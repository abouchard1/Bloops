@import url('https://fonts.googleapis.com/css?family=Luckiest+Guy&display=swap')
@import url('https://fonts.googleapis.com/css?family=Open+Sans&display=swap')
@require './reset'
  @import "~prismjs/themes/prism-okaidia.css"


body
  font-family: 'Open Sans', sans-serif
  font-weight: 400
  font-size: 1em
  line-height: 1.5
  color: $black
footer
  height: 60px
  background-color: $black
  color: $white
  text-align: center
  line-height: 60px
h1
  font-family: 'Luckiest Guy', cursive
  font-size: 4em
  font-weight: 400
  margin-bottom: 10px

h2
  font-family: 'Luckiest Guy', cursive
  font-size: 3em
  font-weight: 400
  margin-bottom: 8px

h3
  font-family: 'Luckiest Guy', cursive
  font-size: 2em
  font-weight: 400
  margin-bottom: 10px

p
  text-align: justify
  line-height: 1.8
a
  font-size: 1em
  text-decoration: none
  color: inherit
.container
  max-width: 1200px
  margin: 0 auto
  padding: 0 20px
.two-columns
  display: flex
  flex-direction: column
  @media (min-width: 992px)
    flex-direction: row
  > div
    flex: 1
  &-white
    background-color: $white
  &-blue
    background-color: $blue
.text-box
  margin: 40px
  @media (min-width: 992px)
    margin: 80px
  @media (min-width: 1200px)
    margin: 100px
.images-box
  flex: 1
  background-color: $blue
  text-align: center
  @media (min-width: 768px)
    display: flex
    justify-content: space-evenly
    align-items: center
  > img
    margin: 0 auto
    display: inline-block
    //border: 2px solid $white;
    height: 200px

.blog
  background: $black
  color: $white
  padding: 30px
  min-height: calc(100vh - 180px)

.tags
  margin: 0 0 10px 0
  > span
    border-radius: 10px
    background: #efbc87
    margin-right: 10px
    padding: 4px 8px
    color: $black

.post-details
  display: flex
  align-content: center

  > div
    margin-right: 20px